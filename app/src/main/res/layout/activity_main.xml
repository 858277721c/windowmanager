<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAddToWindow"
        android:text="添加到Window"/>

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRemoveFromWindow"
        android:text="从Window移除"/>

    <Button
        android:id="@+id/btn_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRestore"
        android:text="还原到原布局"/>

    <Button
        android:id="@+id/btn_new_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickNewActivity"
        android:text="打开新Activity"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_new_activity_float"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="新Activity悬浮View"/>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="200dp"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_click"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="button"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/holo_red_dark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@android:color/holo_blue_dark"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
